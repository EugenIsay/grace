<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="grace.AuthorizationWindow"
        Title="AuthorizationWindow">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center"  Text="Горнолыжный курорт Благодать"></TextBlock>
        <TextBlock HorizontalAlignment="Center"  Text="Для продолжения введите почту и пароль"></TextBlock>
        <TextBlock Text="Почта"></TextBlock>
        <TextBox Name="Email"></TextBox>
        <TextBlock Text="Пароль"></TextBlock>
        <TextBox Name="Password" PasswordChar="*"></TextBox>
        <Button Click="Ready_OnClick" Name="Ready" Content="Потвердить"></Button>
    </StackPanel>
</Window>
